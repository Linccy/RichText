<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.linccy.richtext.RichEditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="#ffffff"
            android:enabled="true"
            android:gravity="top"
            android:hint="说点什么吧~"
            android:inputType="textMultiLine"
            android:maxLines="20"
            android:minLines="5"
            android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/at_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AT用户"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/add_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#标签"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/add_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$标签"
                android:textAllCaps="false" />
        </LinearLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="完成"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:background="#c0c6c4c4"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="显示效果"
                android:textColor="#c0c6c4c4"
                android:textSize="14sp"
                android:layout_margin="@dimen/activity_horizontal_margin"/>
            <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:background="#c0c6c4c4"
                android:layout_weight="1"/>
        </LinearLayout>

        <com.linccy.richtext.RichTextView
            android:id="@+id/tv_result_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            tools:text="这里是显示结果"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:background="#c0c6c4c4"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际输出"
                android:textColor="#c0c6c4c4"
                android:textSize="14sp"
                android:layout_margin="@dimen/activity_horizontal_margin"/>
            <View
                android:layout_width="0px"
                android:layout_height="1px"
                android:background="#c0c6c4c4"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_result_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="这里是实际的字符串"
            android:padding="@dimen/activity_horizontal_margin"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
